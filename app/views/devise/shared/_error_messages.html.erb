<% if resource.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      The form contains <%=  pluralize(resource.errors.count, "error")%>
  </div>
    <ul class="errors-list">
      <% resource.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
